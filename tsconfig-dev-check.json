{
  "include": [
    "./src/lib.ts",
    "./tests/jest/**/*.ts"
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "es2021"],
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "allowJs": true,
    "outDir": "./build/dev/"
  }
}