{
  "files": [
    "./src/lib.ts",
  ],
  "compilerOptions": {
    "paths": {
      "tslib": [
        "./node_modules/tslib/tslib.d.ts"
      ]
    },
    "incremental": true,
    "strict": true,
    "target": "es2021",
    "module": "commonjs",
    "sourceMap": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "allowJs": false
  }
}